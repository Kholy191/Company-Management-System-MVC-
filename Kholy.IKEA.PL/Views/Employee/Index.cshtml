@using Kholy.IKEA.PL.ViewModels.Employee
@model IEnumerable<EmployeeViewModel>

@{
	ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
	<br />
	<br />

	<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
	Create new Employee
	</a>


	<br />
	<br />

@if (Model?.Any() ?? false)
{

	<table class="table table-striped table-hover mt-3">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(D => D.Name)</th>
				<th>@Html.DisplayNameFor(D => D.Salary)</th>
				<th>@Html.DisplayNameFor(D => D.IsActive)</th>
				<th>@Html.DisplayNameFor(D => D.EmployeeType)</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>

			@foreach (var Employee in Model)
			{
				<tr>
					<td>@Employee.Name</td>
					<td>@Employee.Salary</td>
					<td>@Employee.IsActive</td>
					<td>@Employee.EmployeeType</td>
					<td>
						<a asp-controller="Employee" asp-action="Details" asp-route-id="@Employee.Id" class="btn btn-warning">
							<i class="fas fa-eye"></i>Details
						</a>

						<a asp-controller="Employee" asp-action="Edit" asp-route-id="@Employee.Id" class="btn btn-success">
							<i class="fas fa-edit"></i>Update
						</a>

						<a asp-controller="Employee" asp-action="Delete" asp-route-id="@Employee.Id" class="btn btn-danger">
							<i class="fas fa-trash"></i>Delete
						</a>
					</td>
				</tr>
			})
		</tbody>
	</table>
}
else
{
	<div class="alert alert-primary mt-4">
		<p>There is No Employee</p>
	</div>
}

