@using Kholy.IKEA.PL.ViewModels.Employee
@model EmployeeDetailsViewModel

<div class="tab-content" id="myTabContent">
	<!-- General Tab Content -->
	<div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general">
		<div class="row">
			<div class="form-group mb-3">
				<label class="form-label" asp-for="Name"></label>
				<input asp-for="Name" class="form-control" readonly />
			</div>

			<div class="form-group mb-3">
				<label class="form-label" asp-for="Age"></label>
				<input asp-for="Age" class="form-control" readonly />
			</div>

			<div class="form-group mb-3">
				<label class="form-label" asp-for="Salary"></label>
				<textarea asp-for="Salary" class="form-control" readonly></textarea>
			</div>

			<div class="form-group mb-3">
				<label class="form-label" asp-for="Email"></label>
				<input type="text" asp-for="Email" class="form-control" />
			</div>

			<div class="form-group mb-3">
				<label class="form-label" asp-for="Phone"></label>
				<textarea asp-for="Phone" class="form-control" readonly></textarea>
			</div>

			<div class="form-group mb-3">
				<label class="form-label" asp-for="Address"></label>
				<textarea asp-for="Address" class="form-control" readonly></textarea>
			</div>

			<div class="form-group mb-3">
				<label class="form-label" asp-for="IsActive"></label>
				<textarea asp-for="IsActive" class="form-control" readonly></textarea>
			</div>

			<div class="form-group mb-3">
				<label class="form-label" asp-for="HiringDate"></label>
				<input type="date" asp-for="HiringDate" class="form-control" readonly />
			</div>

			<div class="form-group mb-3">
				<label class="form-label" asp-for="gender"></label>
				<textarea asp-for="gender" class="form-control" readonly></textarea>
			</div>

			<div class="form-group mb-3">
				<label class="form-label" asp-for="EmployeeType"></label>
				<textarea asp-for="EmployeeType" class="form-control" readonly></textarea>
			</div>

			<div class="form-group mb-3">
				<label class="form-label" asp-for="Department"></label>
				<textarea asp-for="Department" class="form-control" readonly></textarea>
			</div>

			<div class="row justify-content-start align-items-start">
				<div class="col-4">
					<img src="~/Files//Images//@Model.Image" class="img-fluid rounded-2" alt="Employee Img" />
				</div>
			</div>

		</div>
	</div>
</div>

@if (ViewData["Title"] as string == "Details")
{
	<div class="mt-4">
		<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
		<a asp-action="Index" class="btn btn-light">Back To List</a>
	</div>
}
else{
	<form asp-route-id="@Model.Id" asp-action="Delete" class="mt-4">
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
		<a asp-action="Index" class="btn btn-light">Back To List</a>
	</form>
}